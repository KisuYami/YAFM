#!/bin/bash
mkdir build

# Rpm build
cd RPM/
make
cp $(find RPMS/ -name "*.rpm") ../build/
make clear
cd ..

# Deb build
cd DEB/
make
cp *.deb ../build/
make clear
cd ..

# Universal Build
cd ../
make
cp build/yafm ./Packages/build/
make clear
cd Packages/build
tar cfv YAFM-$VERSION.tar yafm
tar czfv YAFM-$VERSION.tar.gz yafm
zip YAFM-$VERSION.zip yafm
rm yafm
cd ..
